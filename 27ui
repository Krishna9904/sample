        st.markdown(f"<div style='padding: 10px; border: 1px solid #ddd; border-radius: 10px; margin-bottom: 10px;'>"
                    f"<strong>{job['name']}</strong><br>Status: {job['status']}</div>",
                    unsafe_allow_html=True)

